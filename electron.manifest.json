{
  "executable": "jira2ets",
  "splashscreen": {
    "imageFile": ""
  },
  "name": "jira2ets",
  "author": "Holiakhovskyi Yevhen",
  "singleInstance": true,
  "environment": "Production",
  "build": {
    "appId": "com.jira2ets.app",
    "productName": "jira2ets",
    "copyright": "Copyright Â© 2023",
    "buildVersion": "1.0.0",
    "compression": "maximum",
    "artifactName": "jira-2-ets-${version}.${ext}",
    "directories": {
      "output": "../../../bin/Desktop"
    },
    "publish": {
      "owner": "yholia",
      "repo": "jira2ets",
      "provider": "github",
      "private": true
    },
    "extraResources": [
      {
        "from": "./bin",
        "to": "bin",
        "filter": [ "**/*" ]
      }
    ],
    "files": [
      {
        "from": "./ElectronHostHook/node_modules",
        "to": "ElectronHostHook/node_modules",
        "filter": [ "**/*" ]
      },
      "**/*"
    ]
  }
}